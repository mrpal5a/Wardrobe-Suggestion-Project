<% layout('../layouts/boilerplate') -%>
<div class="container mt-5">
  <div class="text-center">
    <h1 class="display-4 mb-4 fw-bold text-dark">👕 Welcome to Wardrobe Suggestion</h1>
    <p class="lead text-muted mb-5">
      Get the perfect outfit suggestion based on your occasion or mood.
    </p>
  </div>

  <div class="row justify-content-center my-3">
    <div class="col-md-6">
      <div class="card shadow-lg border-0 p-4 rounded-4">
        <h4 class="text-center mb-3 text-primary">Select your dress type</h4>
        <form action="/wearThis" method="get">
          <select name="dressType" id="dressType" class="form-select mb-4 fs-5">
            <option value="casual" selected>👟 Casual</option>
            <option value="formal">🧥 Formal</option>
            <option value="party wear">🎉 Party wear</option>
            <option value="ethnic">🕌 Ethnic</option>
            <option value="summer">🌞 Summer</option>
            <option value="winter">❄️ Winter</option>
          </select>
          <div class="d-grid">
            <button class="btn btn-dark btn-lg rounded-pill">
              🔍 Get Suggestion
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
 </div>
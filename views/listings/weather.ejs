<% layout('../layouts/boilerplate') -%>
<!-- Weather Card -->
 <br>
<form class="d-flex" action="/weatherInfo" method="post">
    <input class="form-control me-2" type="search" name="city" placeholder="Enter City" aria-label="Search">
    <button class="btn btn-outline-success" type="submit">Search</button>
</form>
  <br>
  <% if (result) { %>
  <div class="card mb-3 weather-card" style="width: 640px;">
    <div class="row g-0">
      <div class="col-md-4" id="weatherVideo" >
          <video autoplay muted loop id="weatherVideo" width="220px" style="overflow: hidden;">
            <source src="/videos/<%= result.temp <= 20 ? 'winter.mp4' : 'summer.mp4' %>" type="video/mp4" />
          </video>
      </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= result.city %></h5>
            <p class="card-text">Temperature : <%= result.temp %> &deg;C</p>
            <p class="card-text">Humidity: <%= result.humidity %> &percnt;  </p>
            <p class="card-text"><small class="text-body-secondary">Feels like <i><b> <%= result.weather %></b> </i></small></p>
          </div>
        </div>
    </div>
  </div>
  <% } else { %>
  <div class="card mb-3 weather-card" style="width: 540px;">
    <div class="row g-0" >
      <div class="col-md-4" >       
          <img src="/wardrobelogo.png" class="img-fluid rounded-start" alt="..." >    
     </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">City</h5>
            <p class="card-text">Temperature</p>
            <p class="card-text">Humidity</p>
            <p class="card-text"><small class="text-body-secondary">Search for City</small></p>
          </div>
        </div>
       <% } %>
    </div>
  </div>
  <div class="d-flex justify-content-center align-items-center">
    <% if(outside) { %>
      <h3>Outside Feels like <%= outside %></h3>
      <% } %>
    </div>
  <% if(!shirt || !pant ){ %>

  <%}else { %>
    <div class="row card-row row-cols-lg-2 row-cols-md-2 row-cols-sm-1 d-flex justify-content-center align-items-center" >
      <div class="card col gsap listing-card mx-4 " style="width: 18rem">
        <!-- Shirt -->
        <img
        src="<%= shirt.image.url %>"
        class="card-img-top image"
        alt="pant"
        style="height: 20rem"
        />
        <div class="card-body">
          <p class="card-text"><%= shirt.title %></p>
        </div>
      </div>
      <div class="card gsap col listing-card mx-4" style="width: 18rem">
        <!-- Pant -->
        <img
        src="<%= pant.image.url %>"
        class="card-img-top image"
        alt="pant"
        style="height: 20rem"
        />
        <div class="card-body">
          <p class="card-text"><%= pant.title %></p>
        </div>
      </div>
    </div>
  <%} %>
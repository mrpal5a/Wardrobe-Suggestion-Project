<% layout('../layouts/boilerplate') -%>
<body>
  <div class="row">
    <div class="col">
      <a href="/collection"><button class="btn btn-outline-success mt-3 me-3">All</button></a>
        <a href="/shirts"> <button class="btn btn-outline-success mt-3 me-3">Shirts</button></a>
        <a href="/pants"> <button class="btn btn-secondary mt-3 " >Pants</button></a>
    </div>
</div>
    <h2>Pants</h2> 
    <div class="row card-row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let pant of allpants){ %>
    <div class="card gsap col listing-card mx-4 d-flex align-items-center justify-content-center fav" style="width: 18rem;">
      <a href="/pants/<%= pant._id %>/edit"> <img src="<%= pant.image.url %>" class="card-img-top image" alt="pant" style="height: 20rem;"> </a>
        <div class="card-body">
          <p class="card-text"><%= pant.title %></p>
        </div>
      </div>
    <%}%>
    </div>
</body>


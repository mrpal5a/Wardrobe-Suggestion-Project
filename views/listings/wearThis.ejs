<% layout('../layouts/boilerplate') -%>
<h2>Try this collection</h2>
<div class="row row-cols-lg-2 row-cols-md-2 row-cols-sm-1">
  <div class="card col listing-card mx-4" style="width: 18rem">
    Shirt
    <img
      src="<%= shirt.image.url %>"
      class="card-img-top"
      alt="pant"
      style="height: 20rem"
    />
  </div>
  <div class="card col listing-card mx-4" style="width: 18rem">
    Pant
    <img
      src="<%= pant.image.url %>"
      class="card-img-top"
      alt="pant"
      style="height: 20rem"
    />
  </div>
</div>
<div class="row row-cols-lg-2 row-cols-md-2 row-cols-sm-1">
    <div>
        <form action="/wearThis" method="get" class="mb-3">
            <select name="dressType" id="dressType" class="form-select">    
                <option value="casual" selected>Casual</option>
                <option value="formal">Formal</option>
                <option value="party wear">Party wear</option>
                <option value="chhapri">Chhapri</option>
                <option value="ethnic">Ethnic</option>
            </select>
            <button class="btn btn-outline-dark">Get Suggestion</button>
        </form>
    </div>
    <div>
        <form action="/" method="get">
            <button class="btn btn-outline-success">Home</button>
        </form>
    </div>
    <br><br>
</div>
<% layout('../layouts/boilerplate') -%>
<body>
    <h2>Edit this pant <%= ThisPant.title %></h2>
    <form action="/pant/<%= ThisPant._id %>?_method=PUT" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Change Pant Title</label>
            <input type="text" name="pant[title]" value="<%= ThisPant.title %>" class="form-control" >
        </div>
        <div class="mb-3">
            <label for="dressType">Change Dress Type:</label>
            <select name="pant[dressType]" id="dressType" class="form-select">    
                <option value="<%= ThisPant.dressType %>" selected> <%= ThisPant.dressType %></option>
                <option value="casual" >Casual</option>
                <option value="formal">Formal</option>
                <option value="party wear">Party wear</option>
                <option value="chhapri">Chhapri</option>
                <option value="ethnic">Ethnic</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input type="file"name="pant[image]" placeholder="Enter image URL/link" class="form-control ">
        </div>
        <button class="btn btn-outline-success mt-3">Update Pant Details</button>
    </form>    
    <form action="/pant/<%= ThisPant._id %>?_method=DELETE" method="post">
        <button class="btn btn-outline-danger mt-3">Delete</button>
    </form>
</body>
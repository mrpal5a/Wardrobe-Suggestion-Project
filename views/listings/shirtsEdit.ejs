<% layout('../layouts/boilerplate') -%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
    <h2>Edit this Wardrobe : <%= ThisShirt.title %></h2>
    <form action="/shirt/<%= ThisShirt._id %>?_method=PUT" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Change Shirt Title</label>
            <input type="text" name="shirt[title]" value="<%= ThisShirt.title %>" class="form-control" >
        </div>
        <div class="mb-3">
            <label for="dressType">Change Dress Type:</label>
            <select name="shirt[dressType]" id="dressType" class="form-select">    
                <option value="<%= ThisShirt.dressType %>" selected><%= ThisShirt.dressType %></option>
                <option value="casual" selected>Casual</option>
                <option value="formal">Formal</option>
                <option value="party wear">Party wear</option>
                <option value="ethnic">Ethnic</option>
                <option value="summer">Summer</option>
                <option value="winter">Winter</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input type="file"name="shirt[image]" placeholder="Enter image URL/link" value="<%= ThisShirt.image %>" class="form-control ">
        </div>
        <button class="btn btn-outline-success mt-3">Update Shirt Details</button>
    </form>    
    <div class="row">
        <div class="col d-flex">    
    <form action="/shirt/<%= ThisShirt._id %>?_method=DELETE" method="post">
        <button class="btn btn-outline-danger mt-3 me-3"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
          </svg> &nbsp;Delete</button>
    </form>
    <% if(ThisShirt.favorite) { %>
        <form action="/<%= ThisShirt._id %>/favorite" method="post">
            <button class="btn btn-danger mt-3"> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart" viewBox="0 0 16 16">
                <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143q.09.083.176.171a3 3 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15"/>
              </svg> &nbsp;Remove Favorite</button>
        </form>
    <% }else{ %>
        <form action="/<%= ThisShirt._id %>/favorite" method="post">
            <button class="btn btn-success mt-3"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart-fill" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314"/>
              </svg> &nbsp;Add to Favorite</button>
        </form>
   <% } %>
   
        </div>
    </div>
    </div>
    </div>
</body>
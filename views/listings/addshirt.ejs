<% layout('../layouts/boilerplate') -%>
<div class="row">
    <div class="col-8 offset-2">
<form action="shirts" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label for="title" class="form-label">Shirt Title</label>
        <input type="text" name="shirt[title]" class="form-control" required>
        <div class="invalid-feedback">Title is required.</div>
    </div>
    <div class="mb-3">
        <label for="image" class="form-label">Image</label>
        <input type="text"name="shirt[image]" placeholder="Enter image URL/link" class="form-control " >
    </div>
    <button class="btn btn-outline-success mt-3">Add Shirt</button>
</form>    
</div>
</div>
<% layout('../layouts/boilerplate') -%>
<div class="row">
    <div class="col-8 offset-2">
        <h2>Add New Pant ðŸ¥³</h2>
<form action="/pants" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
    <div class="mb-3">
        <label for="title" class="form-label">Pant Title</label>
        <input type="text" name="pant[title]" class="form-control" required>
        <div class="invalid-feedback">Title is required.</div>
    </div>
    <div class="mb-3">
        <label for="dressType">Select Dress Type:</label>
        <select name="pant[dressType]" id="dressType" class="form-select">    
            <option value="casual" selected>Casual</option>
            <option value="formal">Formal</option>
            <option value="party wear">Party wear</option>
            <option value="ethnic">Ethnic</option>
            <option value="summer">Summer</option>
            <option value="winter">Winter</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="image" class="form-label">Image</label>
        <input type="file"name="pant[image]" placeholder="Enter image URL/link" class="form-control " >
    </div>
    <button class="btn btn-outline-success mt-3">Add Pant</button>
</form>    
</div>
</div>